<div class="row">
  <div class="col-md-3">
    <div class="well">
      <% unless @user== current_user%>
      <% if current_user.following.include?(@user.id)%>
      <% link_to 'unfollow',unfollow_path(id: @user.id),id: "unfollow_btn",class: 'btn btn-denger'%>
      <%eles%>
      <% link_to 'Follow',now_follow_path(id: @user.id),class: 'btn btn-info'%>
      <%end%>
      <%end%>
      <p>
      <%= @user.username%>|<%= @user.name%>
    </p>
    <p>
    Location: <%=@user.location%>
  </p>
  <p>
Bio:<%= @user.bio%>
  </p>
    </div>
    </div>
  <div class="col-md-6">
    <% @user.tweets.each do |tweet|%>
    <%= render tweet %>
    <%end%>
</div>

<div class="col-md-3">

</div>
</div>
